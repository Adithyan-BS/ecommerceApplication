<section>
  <form action="" id="checkout-form">
    <div class="container mt-5">
        <h3>Enter Delevery Details</h3>
        <label for="">Address</label>
        <input type="text" name="address" class="form-control" style="width: 50%;">
        <label for="">pincode</label>
        <input type="text" name="pincode" class="form-control" style="width: 50%;">
        <label for="">Mobile Number</label>
        <input type="text" name="mobile" class="form-control" style="width: 50%;">
        <input type="text" name="userId" id="" value="{{user._id}}" hidden> 




    </div>
    <section class="container mt-3" >  
    <div class="card " style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title">Total Amount :Rs .{{total}}</h5>
    <hr>
    <h6>Payment method</h6>
    <hr>
    <div class="payment">
      <p>payment method</p>
      <label class="radio-inline">
        <input type="radio" name="payment-method" value="COD"checked>COD
      </label>
      <label class="radio-inline mt-2">
        <input type="radio" name="payment-method" value="ONLINE">online payment
      </label>
      <button class="btn btn-primary float-right" type="submit">checkout</button>
    </div>
  </div>

  </div>
  </div>
  </form>
  </section>
  <script>
    $("#checkout-form").submit((e)=>{
      e.preventDefault()
      $.ajax({
        url:'/place-order',
        method:'post',
        data:$('#checkout-form').serialize(),
        success:(response)=>{
          alert(response)
        }
      })
    })
  </script>
</div>
</section>